{
    "compilerOptions": {
      "jsx": "react",
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "./build/",
      "preserveConstEnums": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "skipLibCheck": true
    },
    "include": ["src", "*.d.ts", "config/webpack/"]
  }
  